{
  "manifest_version": 3,
  "name": "Breakdance Style Extractor",
  "version": "1.0.0",
  "description": "Extract website styles and convert to Breakdance global settings JSON",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}